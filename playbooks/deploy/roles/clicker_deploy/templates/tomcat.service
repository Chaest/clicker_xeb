# Example systemd file
[Unit]
Description=Clicker tomcat
After=network.target

[Service]
Type=forking

WorkingDirectory={{ tomcat_home }}

ExecStart={{ tomcat_home }}/bin/startup.sh
ExecStop={{ tomcat_home }}/bin/shutdown.sh

User={{ tomcat_user }}
Group={{ tomcat_group }}
UMask=0007
RestartSec=15
Restart=always

[Install]
WantedBy=multi-user.target
